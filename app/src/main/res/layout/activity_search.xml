<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hesso.mas.stdhb.Client.Gui.Search.SearchActivity"
    android:background="#084B8A">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_logo"
        android:id="@+id/mImgLogo" />

    <TextView
        android:id="@+id/contact_form_title"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="5dp"
        android:text="Search médiathèque"
        android:textColor="#ce3232"
        android:textSize="20sp"
        android:typeface="serif" />

    <Spinner android:id="@+id/mDcboSujet"
        android:textColor="@android:color/white"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:layout_column="22" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/lbl_place"
        android:textColor="#ffffff"
        android:ems="10"
        android:height="10px"
        android:id="@+id/mTxtPlace" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/date"
        android:textColor="#ffffff"
        android:ems="10"
        android:height="10dp"
        android:id="@+id/mTxtPeriod"
        android:layout_gravity="bottom"
        android:layout_weight="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mBtnSearch"
        android:layout_gravity="center_horizontal"
        android:background="#ce3232"
        android:elevation="4dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Search"
        android:textColor="#fff" />

</LinearLayout>
